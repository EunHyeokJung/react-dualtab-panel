{
  "name": "react-dualtab-panel",
  "version": "0.1.0-beta.1",
  "description": "A lightweight React library for creating dual-panel interfaces with independent tab systems",
  "type": "module",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.cjs.js"
    },
    "./styles": "./dist/index.css"
  },
  "keywords": [
    "react",
    "typescript",
    "tabs",
    "panels",
    "dual-panel",
    "split-panel",
    "ui-components",
    "dashboard",
    "layout"
  ],
  "author": {
    "name": "EunHyeuk Jung (Austin Jung)",
    "email": "silverhyeok.dev@gmail.com",
    "url": "https://github.com/EunHyeokJung"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EunHyeokJung/react-dualtab-panel.git"
  },
  "bugs": {
    "url": "https://github.com/EunHyeokJung/react-dualtab-panel/issues"
  },
  "homepage": "https://github.com/EunHyeokJung/react-dualtab-panel#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "rollup -c && tsc --project tsconfig.build.json --declaration --emitDeclarationOnly --outDir dist/types && cp dist/types/index.d.ts dist/index.d.ts",
    "build:dev": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rollup": "^4.29.3",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "tslib": "^2.8.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}
